{
  "name": "ilkka.github.io",
  "version": "2.0.0",
  "private": true,
  "description": "My github pages site",
  "scripts": {
    "build": "mkdir -p static && browserify js/*.js -d | uglifyjs -o static/bundle.js -c -m",
    "watch": "mkdir -p static && watchify js/*.js -o static/bundle.js -dv"
  },
  "browser": {
    "react": "./bower_components/react/react.js"
  },
  "browserify": {
    "transform": ["reactify"]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ilkka/ilkka.github.com"
  },
  "author": "Ilkka Laukkanen <ilkka@fastmail.fm>",
  "license": "Apache License v2",
  "bugs": {
    "url": "https://github.com/ilkka/ilkka.github.com/issues"
  },
  "homepage": "https://github.com/ilkka/ilkka.github.com",
  "devDependencies": {
    "browserify": "^4.1.2",
    "reactify": "^0.13.1",
    "uglify-js": "^2.4.13",
    "watchify": "^0.9.0"
  }
}
